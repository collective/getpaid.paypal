<form style="display:inline;"
      action="https://www.sandbox.paypal.com/cgi-bin/webscr"
      tal:attributes="action view/action_url"
      method="post"
      id="paypal-button">
  <input type="hidden" name="cmd" value="_cart" />
  <input type="hidden" name="upload" value="1" />
  <input type="hidden" name="business" value="merchant_id"
         tal:attributes="value context/options/merchant_id" />
  <input type="hidden" name="currency_code" value="USD"
         tal:attributes="value context/options/currency" />
  <input type="hidden" name="return" tal:attributes="value view/return_url" />
  <input type="hidden" name="cbt" value="Return to the store"
         tal:attributes="value view/cbt_label" />
  <input type="hidden" name="rm" value="2" />
  <input type="hidden" name="notify_url" tal:attributes="value view/ipn_url" />
  <input type="hidden" name="invoice" tal:attributes="value view/order_id" />
  <input type="hidden" name="no_note" value="1" />
  <input tal:repeat="item view/cart_fields"
         type="hidden" name="name" value="value"
         tal:attributes="name python:item[0];value python:item[1]" />
  <input type="image" src="http://images.paypal.com/images/x-click-but1.gif"
         name="submit"
         alt="Make payments with PayPal - it's fast, free and secure!"
         tal:attributes="src view/image_url" />
</form>
